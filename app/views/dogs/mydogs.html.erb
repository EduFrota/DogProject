
<div class="row">
    <% @dogs.each do |dog| %>
      <div class="col l3 m6 s12 ">
          <div class="card">
            <div class="card-image ">
              <% if dog.image.present? %>
                <%= link_to image_tag(dog.image_url(:thumb).to_s), dog %>
              <% else %>
                 <%= link_to image_tag('logo.png', size:"227x227"),dog%>
              <% end %>
            </div>
              <div class="card-content">
                <span class="card-title">
                  <%= dog.name %>
                </span>
                <%= dog.gender %>
                <br>
                <%= dog.breed %>
            </div>
            <div class="card-action">
              <div class="align center">
                <%= link_to content_tag(:i, 'compare', class: 'material-icons'), dog_compare_path(dog) %>
                <%= link_to content_tag(:i, 'edit', class: 'material-icons'), edit_dog_path(dog) %>
                <%= link_to content_tag(:i, 'delete', class: 'material-icons'),dog, method: :delete, data: {confirm:'Tem Certeza?'} %>
              </div>
            </div>
          </div>
      </div>
    <% end %>
</div>
<div class="row">
  <div class="align right">
    <br>
    <%= link_to content_tag(:i, 'add', class: 'material-icons'), new_dog_path, class: 'btn-floating waves-effect waves-light btn-large blue' %>
  </div>
</div>
