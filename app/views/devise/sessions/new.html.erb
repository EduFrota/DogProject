
<div class="row">
  <div class="container-fluid container-fluid-admin bckg-dark">
    <div class="login-form centered">
      <div class="row">
        <div class="col-sm-12 content bckg-dark-light">
          <fieldset>
          <h3 class="text-center">Login</h3>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"E-mail", type:"email" %>
              </div>
              <div class="form-group">
                  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
              </div>
            <div class="form-actions">
              <%= f.submit "Entrar", class: "btn btn-lg btn-success btn-block" %>
              <%= render "devise/shared/links" %>
            </div>
          </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
