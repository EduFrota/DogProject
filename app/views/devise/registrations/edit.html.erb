<h2>Editar <%= resource_name.to_s.humanize %></h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= devise_error_messages! %>
  <div class="row">
    <fieldset>
      <legend>Informações sobre o Dono </legend>
      <%= f.input :name, wrapper_html: { class: 'm6 s12'  } %>
      <%= f.input :state, as: :select, collection: User::STATES, wrapper_html: { class: 'm6 s12' } %>
      <%= f.input :city, wrapper_html: { class: 'm6 s12'  } %>
      <%= f.input :phone, wrapper_html: { class: 'm6 s12'  } %>
      <%= f.input :email, wrapper_html: { class: 'm6 s12 l12'  } %>
     </fieldset>
  </div>

  <div class="row">
    <fieldset>
      <legend>Trocar Senha</legend>
      <div class="field">
        <%= f.label :password %> <i></i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> caracteres no minimo</em>
        <% end %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </fieldset>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

Precisamos da sua senha atual para confirmar as mudanças
  <div class="field">
    <%= f.label :current_password %><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Atualizar", class: "btn btn-lg btn-success btn-block" %>
  </div>
<% end %>

<h3>Cancelar Minha Conta</h3>

<p><%= button_to "Cancelar", registration_path(resource_name), data: { confirm: "Tem Certeza?" }, method: :delete, class: "btn btn-lg btn-success btn-block" %></p>
